<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tebligatlar - <%= username %>
    </title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="app-container">
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>ƒ∞cra Takip</h2>
                <p>
                    <%= username %> (<%= role %>)
                </p>
            </div>
            <nav class="sidebar-menu">
                <a href="/dashboard" class="menu-item">
                    <span class="menu-item-icon">üìä</span>
                    <span>Ana Panel</span>
                </a>
                <a href="/all-tasks" class="menu-item">
                    <span class="menu-item-icon">üìã</span>
                    <span>T√ºm G√∂revler</span>
                </a>
                <a href="/tebligatlar" class="menu-item active">
                    <span class="menu-item-icon">üìù</span>
                    <span>Tebligatlar</span>
                </a>
                <a href="/archive" class="menu-item">
                    <span class="menu-item-icon">üì¶</span>
                    <span>Ar≈üiv</span>
                </a>
            </nav>
            <div class="sidebar-footer">
                <form method="GET" action="/logout">
                    <button type="submit" class="logout-btn">√áƒ±kƒ±≈ü Yap</button>
                </form>
            </div>
        </aside>

        <main class="main-content">
            <div class="content-header">
                <h1>Tebligat Y√∂netimi</h1>
                <p class="breadcrumb">Tebligat olu≈üturma ve takip i≈ülemleri</p>
            </div>

            <!-- Tebligat Olu≈ütur -->
            <section id="tebligat-olustur" class="section active" style="margin-bottom: 2rem;">
                <h2>Tebligat Olu≈ütur</h2>
                <form method="POST" action="/tebligat/create" class="task-form">
                    <input type="text" name="muvekkil" placeholder="M√ºvekkil">
                    <input type="text" name="portfoy" placeholder="Portf√∂y">
                    <input type="text" name="taraf" placeholder="Taraf">
                    <input type="text" name="tckn_vkn" placeholder="TCKN / VKN">
                    <input type="text" name="barkod" placeholder="Barkod No">
                    <input type="text" name="dosya_no" placeholder="Dosya No *" required>
                    <input type="text" name="icra_dairesi" placeholder="ƒ∞cra Dairesi *" required>
                    <textarea name="not" placeholder="Not"></textarea>
                    <button type="submit">Olu≈ütur</button>
                </form>
            </section>

            <!-- Filtreleme B√∂l√ºm√º -->
            <section class="section active" style="margin-bottom: 1.5rem;">
                <h2>Filtreleme</h2>
                <form id="filter-form" method="GET" action="/tebligatlar" class="task-form"
                    style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
                    <select name="durum" style="padding:0.75rem; border-radius:8px; border:1px solid #e0e0e0;">
                        <option value="">T√ºm Durumlar</option>
                        <option value="yapƒ±lƒ±yor" <%=filters.durum==='yapƒ±lƒ±yor' ? 'selected' : '' %>>Yapƒ±lƒ±yor</option>
                        <option value="g√∂nderildi" <%=filters.durum==='g√∂nderildi' ? 'selected' : '' %>>G√∂nderildi
                        </option>
                        <option value="itiraz" <%=filters.durum==='itiraz' ? 'selected' : '' %>>ƒ∞tiraz</option>
                        <option value="tebliƒü" <%=filters.durum==='tebliƒü' ? 'selected' : '' %>>Tebliƒü</option>
                        <option value="iade" <%=filters.durum==='iade' ? 'selected' : '' %>>ƒ∞ade</option>
                    </select>
                    <input type="text" name="icra_dairesi" placeholder="ƒ∞cra Dairesi"
                        value="<%= filters.icra_dairesi || '' %>">
                    <input type="text" name="muvekkil" placeholder="M√ºvekkil" value="<%= filters.muvekkil || '' %>">
                    <select name="ekleyen" style="padding:0.75rem; border-radius:8px; border:1px solid #e0e0e0;">
                        <option value="">T√ºm Kullanƒ±cƒ±lar</option>
                        <% users.forEach(function(u) { %>
                            <option value="<%= u.id %>" <%=filters.ekleyen==u.id ? 'selected' : '' %>><%= u.username %>
                            </option>
                            <% }) %>
                    </select>
                    <div style="display: flex; gap: 0.5rem;">
                        <button type="submit" style="flex: 1;">Filtrele</button>
                        <a href="/tebligatlar"
                            style="padding:0.75rem 1.5rem; background:#6b7280; color:white; border:none; border-radius:8px; cursor:pointer; text-decoration:none; display:inline-block; text-align:center;">Temizle</a>
                    </div>
                </form>
            </section>

            <!-- Tebligat Listesi - Modern Tablo -->
            <section id="tebligat-listesi" class="section active">
                <h2>Tebligat Listesi (<%= tebligatlar.length %> kayƒ±t)</h2>
                <% if (tebligatlar && tebligatlar.length) { %>
                    <div class="modern-table-wrapper">
                        <table class="modern-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Dosya No</th>
                                    <th>ƒ∞cra Dairesi</th>
                                    <th>M√ºvekkil</th>
                                    <th>Portf√∂y</th>
                                    <th>Taraf</th>
                                    <th>TCKN/VKN</th>
                                    <th>Barkod</th>
                                    <th>Durum</th>
                                    <th>Tarih</th>
                                    <th>Not</th>
                                    <th>Ekleyen</th>
                                    <% if (role==='yonetici' ) { %>
                                        <th>ƒ∞≈ülemler</th>
                                        <% } %>
                                </tr>
                            </thead>
                            <tbody>
                                <% tebligatlar.forEach(function(t){ %>
                                    <tr>
                                        <td><span class="id-badge">#<%= t.id %></span></td>
                                        <td><strong>
                                                <%= t.dosya_no || '-' %>
                                            </strong></td>
                                        <td>
                                            <%= t.icra_dairesi || '-' %>
                                        </td>
                                        <td>
                                            <%= t.muvekkil || '-' %>
                                        </td>
                                        <td>
                                            <%= t.portfoy || '-' %>
                                        </td>
                                        <td>
                                            <%= t.taraf || '-' %>
                                        </td>
                                        <td>
                                            <%= t.tckn_vkn || '-' %>
                                        </td>
                                        <td>
                                            <form method="POST" action="/tebligat/<%= t.id %>/update-barkod"
                                                class="scroll-form" style="margin:0;">
                                                <input type="text" name="barkod" value="<%= t.barkod || '' %>"
                                                    placeholder="Barkod"
                                                    style="padding:0.4rem; border-radius:6px; border:1px solid #e0e0e0; width:120px;">
                                                <button type="submit"
                                                    style="padding:0.4rem 0.6rem; background:#10b981; color:white; border:none; border-radius:6px; cursor:pointer; font-size:0.85rem;">‚úì</button>
                                            </form>
                                        </td>
                                        <td><span class="status-badge status-<%= t.durum %>">
                                                <%= t.durum %>
                                            </span></td>
                                        <td>
                                            <%= t.tarih %>
                                        </td>
                                        <td>
                                            <form method="POST" action="/tebligat/<%= t.id %>/update-not"
                                                class="scroll-form" style="margin:0;">
                                                <textarea name="notlar" placeholder="Not ekle..."
                                                    style="padding:0.4rem; border-radius:6px; border:1px solid #e0e0e0; width:200px; min-height:60px; resize:vertical;"><%= t.notlar || '' %></textarea>
                                                <button type="submit"
                                                    style="padding:0.4rem 0.6rem; background:#10b981; color:white; border:none; border-radius:6px; cursor:pointer; font-size:0.85rem; margin-top:0.25rem;">Kaydet</button>
                                            </form>
                                        </td>
                                        <td>
                                            <form method="POST" action="/tebligat/<%= t.id %>/update-user"
                                                class="scroll-form" style="margin:0;">
                                                <select name="created_by"
                                                    style="padding:0.4rem; border-radius:6px; border:1px solid #e0e0e0; width:120px;">
                                                    <option value="">-</option>
                                                    <% users.forEach(function(u) { %>
                                                        <option value="<%= u.id %>" <%=t.created_by==u.id ? 'selected'
                                                            : '' %>><%= u.username %>
                                                        </option>
                                                        <% }) %>
                                                </select>
                                                <button type="submit"
                                                    style="padding:0.4rem 0.6rem; background:#10b981; color:white; border:none; border-radius:6px; cursor:pointer; font-size:0.85rem; margin-top:0.25rem;">‚úì</button>
                                            </form>
                                        </td>
                                        <% if (role==='atanan' && t.created_by===userId) { %>
                                            <td>
                                                <form method="POST" action="/tebligat/<%= t.id %>/mark-progress"
                                                    class="scroll-form" style="margin:0;">
                                                    <button type="submit"
                                                        style="padding:0.5rem 1rem; background:<%= t.durum === 'yapƒ±lƒ±yor' ? '#f59e0b' : '#10b981' %>; color:white; border:none; border-radius:6px; cursor:pointer;">
                                                        <%= t.durum==='yapƒ±lƒ±yor' ? '‚è∏ Yapƒ±lƒ±yor'
                                                            : '‚ñ∂ Yapƒ±lƒ±yor Olarak ƒ∞≈üaretle' %>
                                                    </button>
                                                </form>
                                            </td>
                                            <% } else if (role==='yonetici' ) { %>
                                                <td>
                                                    <div style="display:flex; gap:0.5rem; align-items:center;">
                                                        <form method="POST" action="/tebligat/<%= t.id %>/update-status"
                                                            class="scroll-form"
                                                            style="display:flex; gap:0.5rem; align-items:center; flex:1;">
                                                            <select name="durum"
                                                                style="padding:0.5rem; border-radius:6px; border:1px solid #e0e0e0; flex:1;">
                                                                <option value="">-</option>
                                                                <option value="yapƒ±lƒ±yor" <%=t.durum==='yapƒ±lƒ±yor'
                                                                    ? 'selected' : '' %>>Yapƒ±lƒ±yor</option>
                                                                <option value="g√∂nderildi" <%=t.durum==='g√∂nderildi'
                                                                    ? 'selected' : '' %>>G√∂nderildi</option>
                                                                <option value="itiraz" <%=t.durum==='itiraz'
                                                                    ? 'selected' : '' %>>ƒ∞tiraz</option>
                                                                <option value="tebliƒü" <%=t.durum==='tebliƒü'
                                                                    ? 'selected' : '' %>>Tebliƒü</option>
                                                                <option value="iade" <%=t.durum==='iade' ? 'selected'
                                                                    : '' %>
                                                                    >ƒ∞ade</option>
                                                            </select>
                                                            <button type="submit"
                                                                style="padding:0.5rem 1rem; background:#667eea; color:white; border:none; border-radius:6px; cursor:pointer;">G√ºncelle</button>
                                                        </form>
                                                        <form method="POST" action="/tebligat/<%= t.id %>/delete"
                                                            class="scroll-form" style="margin:0;">
                                                            <button type="submit"
                                                                onclick="return confirm('Bu tebligatƒ± silmek istediƒüinizden emin misiniz?')"
                                                                style="padding:0.5rem 0.75rem; background:#ef4444; color:white; border:none; border-radius:6px; cursor:pointer;"
                                                                title="Sil">üóëÔ∏è</button>
                                                        </form>
                                                    </div>
                                                </td>
                                                <% } else { %>
                                                    <td>-</td>
                                                    <% } %>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <div class="empty-state">
                            <div class="empty-state-icon">üìö</div>
                            <p>Tebligat bulunamadƒ±</p>
                        </div>
                        <% } %>
            </section>
        </main>
    </div>

    <script>
        // Scroll pozisyonunu kaydet ve geri y√ºkle
        document.addEventListener('DOMContentLoaded', function () {
            // Sayfa y√ºklendiƒüinde scroll pozisyonunu geri y√ºkle
            const savedScrollPos = sessionStorage.getItem('tebligatScrollPos');
            if (savedScrollPos) {
                window.scrollTo(0, parseInt(savedScrollPos));
                sessionStorage.removeItem('tebligatScrollPos');
            }

            // T√ºm formlarƒ± dinle ve submit √∂ncesi scroll pozisyonunu kaydet
            const scrollForms = document.querySelectorAll('.scroll-form');
            scrollForms.forEach(form => {
                form.addEventListener('submit', function () {
                    sessionStorage.setItem('tebligatScrollPos', window.scrollY);
                });
            });

            // Tebligat olu≈ütur formu i√ßin de scroll pozisyonunu kaydet
            const createForm = document.querySelector('form[action="/tebligat/create"]');
            if (createForm) {
                createForm.addEventListener('submit', function () {
                    sessionStorage.setItem('tebligatScrollPos', window.scrollY);
                });
            }
        });
    </script>
</body>

</html>